                  android:text="Type:"
                  android:textSize="20dp"
                  android:textColor="@color/white"
                  android:layout_marginLeft="170dp"
                  android:layout_marginTop="90dp"
                  android:id="@+id/Faculty"/>

    </android.support.v7.widget.CardView>
